<p id="notice"><%= notice %></p>

<h1>Listing Playlists</h1>

<% @songs.each do |song| %>
<% Rater.create(song_id: song.id , user_id: current_user.id, count: 0, mood_id: song.mood_id, search: 0) %>
<% end %>
<p> Click here to download the MP3 Player for Offline Purposes! :) </p>
<a href="<%= image_path("OfflinePurpleBlues.zip")%>" download>Offline Purple Blues</a>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mood</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @playlist=Playlist.where(user_id: current_user.id); %>
    <% @playlist.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.mood.id %></td>
        <td><%= playlist.user.id %></td>
        <td><%= link_to 'Show', playlist %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path %>
