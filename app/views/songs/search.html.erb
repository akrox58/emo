

<head>

	<%=stylesheet_link_tag 'css/styles.css' %>
	<%=stylesheet_link_tag 'stars.css' %>
	<%=stylesheet_link_tag 'me.css' %>
	<%=javascript_include_tag 'js/jquery-1.7.2.min.js' ,'js/jquery-ui-1.8.21.custom.min.js','js/man1.js' %>
