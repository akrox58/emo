<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :mood %>
    <%= f.association :artist %>
    <%= f.file_field :audio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
