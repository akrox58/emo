<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :mood , :label_method => :moodname , :value_method => :id %>
    <%= f.association :artist, :label_method => :artistname , :value_method => :id %>
    <%= f.file_field :audio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
