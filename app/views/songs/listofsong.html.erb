<!DOCTYPE html>

<html lang="en">
<head>
<!-- add styles and scripts  -->
	<%=stylesheet_link_tag 'css/styles.css' %>
	<%=stylesheet_link_tag 'stars.css' %>
	<%=stylesheet_link_tag 'me.css' %>
	<%=javascript_include_tag 'js/jquery-1.7.2.min.js' ,'js/jquery-ui-1.8.21.custom.min.js','js/man.js' %>
	<%=javascript_include_tag 'sorttable.js'%>
	

<% @songs.each do |song| %>
<% Rater.create(song_id: song.id , user_id: current_user.id, count: 0, mood_id: song.mood_id, search: 0) %>
<% end %>

<p> Click here to download the MP3 Player for Offline Purposes! :) </p>
<a href="<%= image_path("OfflinePurpleBlues.zip")%>" download>Offline Purple Blues</a>
<br><br><br>

<%= link_to 'â˜…' ,raters_path%>

<script>
function myFunction(id) {
    if (document.getElementById(id).style.display == "none") {
    document.getElementById(id).style.display = 'table';
  }

  else {
    document.getElementById(id).style.display = "none";
  }
}



</script>
    
</head>
<body>


    <div class="example">

        <div class="player">
            <div class="pl"></div>
            <div class="title"></div>

	    <div class="mood"></div>
            <div class="cover"></div>
            <div class="controls">
                <div class="play"></div>
                <div class="pause"></div>
                <div class="rew"></div>
                <div class="fwd"></div>
            </div>
            <div class="volume"></div>
            <div class="tracker"></div>
        </div>

        <ul class="playlist">
	<% @songs.each do |song|%>
<% @rater=Rater.where("song_id=? and user_id=?", song.id,current_user.id).take %>
            <li audiourl="<%=song.audio.url%>" mood="<%=@rater.mood.moodname%>" songid="<%=@rater.id%>"><%=song.name%> </li>
	  <% end %>        
	</ul>

    </div>
</body>

<a href="#" onclick="myFunction('t01'); return false;">Click here to rate/download</a>

<table id="t01" class="sortable" border=2 style="width:100%">
<h1> DOWNLOAD SONGS! </h1>
<p> Click Control+S on the audio player page, if the file does not get downloaded. </p>
<h1> RATE SONGS! </h1>
<p> 1st star => perfect. 2nd star => change mood. 3rd Star => Wrong mood wrong song!</p>

<br><br>

  <thead>
    <tr>
      <th>Name</th>
      <th>Mood</th>
      <th>Artist</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>

    <% @songs.each do |song| %>
<% @rater=Rater.where("song_id=? and user_id=?", song.id,current_user.id).take %>
